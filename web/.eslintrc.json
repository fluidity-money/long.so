{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": [
    "@stylistic/ts",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "processor": "@graphql-eslint/graphql"
    },
    {
      "files": [
        "*.graphql"
      ],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": [
        "@graphql-eslint"
      ]
    }
  ]
}
